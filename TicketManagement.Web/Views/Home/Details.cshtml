@model TicketManagement.Application.Queries.EventDetailsQueryResult


<div class="row event-details">
    <div class="col-md-3">
        <img src="@Model.Poster" class="img-responsive" />
    </div>
    <div class="col-md-9">
        <h2>დასახელება :@Model.Name</h2>
        <h3>ადგილი : @Model.VenueName</h3>
        <h3>ადგილების რაოდენობა: @Model.SeatCount</h3>

        <p>აღწერა: @Model.Description</p>
        <div class="row">
            <div class="col-md-12">
                <iframe width="420" height="315"
                        src="@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#buy">
            ბილეთების ყიდვა
        </button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="buy" tabindex="-1" role="dialog" aria-labelledby="buy" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">ბილეთების შეძენა</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Home/Buy" method="post">
                    <div class="form-group">
                        <div class="form-group">
                            <label>ელ-ფოსტა</label>
                            <input name="Email" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>ბილეთების რაოდენობა</label>
                            <input name="TicketCount" class="form-control" required />
                        </div>
                    </div>

                    <input name="EventId" value="@Model.Id" type="hidden" />
                    <button type="submit" class="btn btn-primary">
                        ყიდვა
                    </button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">დახურვა</button>

            </div>
        </div>
    </div>
</div>